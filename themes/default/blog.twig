<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta charset="utf-8" />

    <title>{% if meta.title %}{{ meta.title }} {% endif %}</title>
    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}">
    {% endif %}{% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}">
    {% endif %}

    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400,700" type="text/css" />
    <link rel="stylesheet" href="{{ theme_url }}/style.css" type="text/css" />

 
    <script src="{{ theme_url }}/scripts/jquery-1.11.1.min.js"></script>
    <script src="{{ theme_url }}/scripts/modernizr-2.6.1.min.js"></script>
    <script type="text/x-mathjax-config">
      MathJax.Hub.Config({tex2jax: {inlineMath: [['$','$'], ['\\(','\\)']]}});
    </script>
    <script type="text/javascript" async
      src="https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS_CHTML">
    </script>
    <script type="text/javascript"> 
    $(document).ready(function() {
       $(".leftborder").css("height", $("#content > .inner").height() + 270);
       $(".leftimg").css("height", $("#content > .inner").height() + 15);
    });   
    </script>
</head>
<body>
    
    <section id="header">
        <div class="inner clearfix">
            <h1><a> {% if meta.title %}{{ meta.title }} {% endif %}</a></h1>
            <nav>
                <a href="#" class="menu-icon"></a>
                <ul>

                    {% for page in pages if page.title %}
                        <li{% if page.id == current_page.id %} class="active"{% endif %}>
                            <a href="{{ page.url }}">{{ page.title }}</a>
                        </li>
                    {% endfor %}

                    <li>
                      <a href="http://johnxie.strikingly.com">| Strikingly Page</a>
                    </li>

                </ul>
            </nav>
        </div>
    </section>

    <section id="menu">
    </section>

    <section id="content">
        <div class="inner">
            {{ content }}
        </div>
    </section>

    <footer id="footer">
        <div class="inner">
           <address> John Xie Â© 2015 AGRYPNIA.CA </address>
        </div>
    </footer>

</body>
</html>
