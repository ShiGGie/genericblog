<!DOCTYPE html>
<html lang="en" class="no-js">
<link rel="icon" type="icon" href="./assets/a1.ico">


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% if meta.title %}{{ meta.title }} {% endif %}</title>
    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}">
    {% endif %}{% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}">
    {% endif %}

    <!--Bootstrap-->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400,700" type="text/css" />
    <link rel="stylesheet" href="{{ theme_url }}/style.css" type="text/css" />


    <script src="{{ theme_url }}/scripts/jquery-1.11.1.min.js"></script>
    <script src="{{ theme_url }}/scripts/modernizr-2.6.1.min.js"></script>
    <script type="text/x-mathjax-config">
      MathJax.Hub.Config({tex2jax: {inlineMath: [['$','$'], ['\\(','\\)']]}});
    </script>

    <script type="text/javascript" async
      src="https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS_CHTML">
    </script>

    <script type="text/javascript"> 
    $(document).ready(function() {
       $(".leftborder").css("height", $("#content > .inner").height() + 270);
       $(".leftimg").css("height", $("#content > .inner").height() + 15);
    });   
    </script>



</head>
<body>
    
    <section id="header">
        <div class="inner clearfix">
            <img id="icon"  alt="icon" src="./assets/a80.png" ></img>
            <h1><a href=./>agrypnianotes</a> </h1>
            <nav>
            <ul>

                    <li>
                      <a href="./?about">About</a>
                    </li>
                    <li class="dropdown">
                          Blogs
                          <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">

                              {% for page in pages if page.meta.category=="blog"  %}
                                  <!--Needs fix-->
                                  <li style="text-align:left;float:left;margin-left:-1em">
                                      <a href="{{ page.url }}">{{ page.title }}</a>
                                  </li>
                              {% endfor %}



                          </ul>
                    </li>
                    <li class="dropdown">
                          Guides
                          <ul class="dropdown-menu" role="menu" aria-labelledby="menu2">

                              {% for page in pages  %}
                                  {% if page.meta.category=="guide" %}

                                  <!--Needs fix-->
                                  <li style="text-align:left;float:left;margin-left:-1em">
                                      <a href="{{ page.url }}">{{ page.title }}</a>
                                  </li>
                                  {%endif%}
                              {% endfor %}



                          </ul>
                    </li>
                    <li>
                      <a href="http://johnxie.strikingly.com">Strikingly</a>
                    </li>
                    </ul>
                </nav>
        </div>
    </section>

    <section id="headerborder"> </section>
    <section id="content">
    

        <div class="inner">
        <div id="metatitle">{% if meta.title %}{{ meta.title }} {% endif %}</div>
        <div id="metadescription">{% if meta.description %}{{ meta.description }} {% endif %}</div>


            {{ content }}


            <br/>
            <br/>
            <br/>
            <i>Last updated: {% if meta.lastupdated %}{{ meta.lastupdated }} {% endif %}</i>
        </div>

    </section>

    <footer id="footer">
        <div class="inner">
           <address> John Xie Â© 2015 AGRYPNIA.CA </address>
        </div>
    </footer>

</body>
</html>
